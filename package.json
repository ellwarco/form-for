{
  "name": "form-for",
  "version": "0.3.2",
  "description": "ReactJS forms made easy.",
  "main": "lib/index.js",
  "umd:main": "umd/form-for.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "prettier": "prettier --write --print-width 120 \"{demo/src,src,test}/**/*.js\"",
    "prettier-lint-staged": "prettier --write --print-width 120",
    "flow": "flow",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "precommit": "lint-staged",
    "preversion": "npm test",
    "version": "git add package.json",
    "postversion": "git push && git push --tags"
  },
  "author": "Pedro Moreira",
  "homepage": "https://github.com/form-for/form-for",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/form-for/form-for.git"
  },
  "bugs": {
    "url": "https://github.com/form-for/form-for/issues"
  },
  "keywords": [
    "react-component",
    "react",
    "reactjs",
    "form",
    "forms",
    "simple-form"
  ],
  "peerDependencies": {
    "react": "> 15.x"
  },
  "devDependencies": {
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "flow-bin": "^0.57.3",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "nwb": "0.19.x",
    "prettier": "^1.7.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier-lint-staged",
      "git add"
    ]
  }
}
