{
  "name": "form-for",
  "version": "0.3.2",
  "description": "ReactJS forms made easy.",
  "main": "lib/index.js",
  "umd:main": "umd/form-for.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "prettier": "prettier --print-width 120 --write \"{demo/src,src,test}/**/*.js\"",
    "flow": "flow",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "preversion": "npm test",
    "version": "git add package.json",
    "postversion": "git push && git push --tags"
  },
  "author": "Pedro Moreira",
  "homepage": "https://github.com/form-for/form-for",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/form-for/form-for.git"
  },
  "bugs": {
    "url": "https://github.com/form-for/form-for/issues"
  },
  "keywords": [
    "react-component",
    "react",
    "reactjs",
    "form",
    "forms",
    "simple-form"
  ],
  "peerDependencies": {
    "react": "> 15.x"
  },
  "devDependencies": {
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "flow-bin": "^0.57.3",
    "lint-staged": "^4.3.0",
    "nwb": "0.19.x",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --print-width 120 --write",
      "git add"
    ]
  }
}
